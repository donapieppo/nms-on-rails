<h1>Facts</h1>

<table class="table-striped table-condensed">
<thead>
  <tr>
    <th>ip</th>
    <th>name</th>
    <th>memorysize</th>
    <th>lsbdistrelease</th>
    <th>lsbdistid</th>
    <th>#proc</th>
    <th>processor</th>
    <th>kernel</th>
    <th>days</th>
  </tr>
</thead>

<tbody>
<% today = Time.now.to_i; @facts.each do |f| %>
  <tr>
    <td><%= f.ip.ip %></td>
    <td><%= f.ip.info and f.ip.info.name %></td>
    <td><%= f.memorysize %></td>
    <td><%= f.lsbdistrelease %></td>
    <td><%= f.lsbdistid %></td>
    <td><%= f.processorcount %></td>
    <td><small><%= f.processor %></small></td>
    <td><small><%= f.kernelrelease %></small></td>
    <td><%= (today - f.date.to_i)/86400 %></td>
  </tr>
<% end %>
</tbody>
</table>

